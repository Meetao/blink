.container {
  background-color: #f5f5ff;
  width: 100%;
}
.container .head {
  background-color: #fff;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.container .head .title {
  color: #2f2f2f;
  margin-top: 20rpx;
  font-size: 38rpx;
  font-weight: 600;
}
.container .head .author {
  font-size: 28rpx;
  color: #999;
}
.container .head image {
  width: 200rpx;
  height: 300rpx;
  box-shadow: 2px 2px 3px #e3e3e3;
}
.container .sub-container {
  width: 690rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30rpx;
  background-color: #fff;
  padding: 30rpx;
}
.container .sub-container .headline {
  font-size: 30rpx;
  font-weight: 600;
  color: #2f2f2f;
  margin-bottom: 20rpx;
}
.container .sub-container .comment-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.container .sub-container .comment-container v-tag {
  margin-right: 15rpx;
  margin-bottom: 10rpx;
}
.container .sub-container .comment-container v-tag .num {
  margin-left: 10rpx;
  font-size: 22rpx;
  color: #aaa;
}
.container .sub-container .content {
  text-indent: 58rpx;
  font-weight: 500;
}
.container .sub-container .detail-container {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin-bottom: 100rpx;
  font-size: 28rpx;
  color: #666;
}
.container .sub-container .detail-container .vertical {
  display: flex;
  flex-direction: column;
}
.container .sub-container .detail-container .description {
  color: #999999;
  margin-right: 30rpx;
}
.post-container {
  height: 100rpx;
  box-shadow: 1px -1px 1px #e3e3e3;
  position: fixed;
  width: 690rpx;
  background-color: #fff;
  bottom: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 30rpx;
  justify-content: space-between;
}
.post-container .post-fake {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 60rpx;
  width: 460rpx;
  border: 1px solid #999999;
  border-radius: 15px;
  font-size: 22rpx;
  padding-left: 20rpx;
}
.posting-container {
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  width: 100%;
  z-index: 999;
}
.posting-container .post-header {
  width: 100%;
  border-bottom: 1px solid #f5f5f5;
  border-top: 1px solid #f5f5f5;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.posting-container .post-header .cancel {
  color: #666;
}
.posting-container .post-header text {
  padding: 25rpx;
}
.posting-container .post-header text:first-child {
  font-size: 28rpx;
  color: #bbb;
}
.posting-container .comment-container {
  width: 690rpx;
  padding: 40rpx 30rpx 0 30rpx;
}
.posting-container .comment-container v-tag {
  margin-right: 15rpx;
  margin-bottom: 10rpx;
}
.posting-container .comment-container v-tag .num {
  margin-left: 10rpx;
  font-size: 22rpx;
  color: #aaa;
}
.posting-container .post {
  width: 690rpx;
  margin: 30rpx auto;
  height: 56rpx;
  background-color: #f5f5f5;
  border-radius: 15px;
  padding-left: 25rpx;
}
.ex-tag1 {
  background-color: #fffbdd !important;
}
.ex-tag2 {
  background-color: #eefbff !important;
}
.shadow {
  color: #999;
}
